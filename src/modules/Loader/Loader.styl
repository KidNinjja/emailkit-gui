@import '__.styl'

.Loader
  position: fixed
  left: 0
  top: 0
  width: 100%
  height: 100%
  z-index: 99

  &::before
    content: ''
    position: absolute
    left: 0
    top: 0
    right: 0
    bottom: 0
    filter: blur(10px)
    background-color: rgba(#282350, .4)

  &__icon
    position: absolute
    top: 50%
    left: 50%
    width: 50px
    height: @width
    margin-top: -(@width / 2)
    margin-left: -(@width / 2)
    animation: Loader__rotate 1s infinite

    &::before,
    &::after
      content: ''
      border-radius: 50%
      display: block
      height: 20px
      width: @height

    &::before
      animation: Loader__ball1 1s infinite
      background-color: #cb2025
      box-shadow: 30px 0 0 #f8b334
      margin-bottom: 10px

    &::after
      animation: Loader__ball2 1s infinite
      background-color: #00a096
      box-shadow: 30px 0 0 #97bf0d

@keyframes Loader__rotate

  0%
    transform: rotate(0deg) scale(0.8)

  50%
    transform: rotate(360deg) scale(1.2)

  100%
    transform: rotate(720deg) scale(0.8)

@keyframes Loader__ball1

  0%
    box-shadow: 30px 0 0 #f8b334

  50%
    box-shadow: 0 0 0 #f8b334
    margin-bottom: 0
    transform: translate(15px,15px)

  100%
    box-shadow: 30px 0 0 #f8b334
    margin-bottom: 10px

@keyframes Loader__ball2

  0%
    box-shadow: 30px 0 0 #97bf0d

  50%
    box-shadow: 0 0 0 #97bf0d
    margin-top: -20px
    transform: translate(15px,15px)

  100%
    box-shadow: 30px 0 0 #97bf0d
    margin-top: 0
