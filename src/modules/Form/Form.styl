@import '__.styl'

.Form
  width: 100%

  &__input
    display: block
    width: 100%
    height: 40px
    line-height: @height
    box-sizing: border-box
    outline: none
    border: 1px solid rgba(#fff, 0.1)
    border-radius: 5px
    font-size: 16px
    padding: 5px 16px 6px
    color: #aaa
    background: rgba(255,255,255,0.04)
    text-align: center
    transition: border-color 100ms ease

    &:hover
      border-color: rgba(#fff, .8)

    &:focus,
    &:active
      border-color: rgba(#fff, .6)

    & + &
      margin-top: 16px

  &__button
    margin-top: 16px
    margin-bottom: 12px
    width: 100%
