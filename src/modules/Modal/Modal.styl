@import '__.styl'

$Modal__pad-x = 50px
$Modal__pad-y = 40px

.Modal
  position: absolute
  left: 50%
  top: 50%
  transform: translate(-50%, -50%)
  width: 480px
  background-color: #1E1E1E
  border-radius: 8px
  padding: 32px 50px
  box-sizing: border-box
  box-shadow: 0 0 7px 0 rgb(18, 18, 19)

  &__header
    text-align: center
    color: #fff
    font-size: 22px
    line-height: @font-size
    margin-bottom: 14px

  &__logo
    position: absolute
    left: 50%
    top: 50%
    font-size: 200px
    color: rgba(#fff, .6)
    transform: translate(-50%, -50%)
    margin-bottom: 24px
