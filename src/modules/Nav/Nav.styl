@import '__.styl'

.Nav
  position: absolute
  left: 0
  top: 0
  width: $nav__width
  height: 100%
  background-color: #2d2d3b
  padding-top: $header__height
  padding-left: 20px
  padding-right: @padding-left
  box-sizing: border-box

  &__title
    color: #7f7f90
    font-size: 16px
    text-transform: uppercase
    margin-top: 24px
    margin-bottom: 4px

  &__item
    color: #7f7f90
    padding: 16px 8px
    text-align: left
    cursor: pointer
    font-size: 16px

    &:hover
      color: #fff

    .Icon
      margin-right: 8px
