@import '__.styl'
@import '../Nav/__.styl'
@import '../App/__.styl'

.Header
  position: absolute
  left: 0
  top: 0
  width: 100%
  background-color: #fff
  height: $header__height
  z-index: 99
  min-width: $app__width

  &::before
    content: ''
    position: absolute
    bottom: 0
    left: $nav__width
    right: 0
    height: 1px
    background-color: #d5dadf

  & &__logo
    display: block
    width: 200px
    height: 100%
    text-align: center

    &::before
      background-color #6a6ae4
      background-image: linear-gradient(#0184ca, #113c6c);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      font-size: 30px
      line-height: $header__height
